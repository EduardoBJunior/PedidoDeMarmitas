
@{

    Layout = "~/Views/Shared/_layout.cshtml";
}


<div class="panel panel-default">
    <div class="panel-heading">
        Fornecedores Cadastrados

    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Código</th>
                        <th>Nome da Fornecedor</th>
                        <th>Preço</th>                      
                        <th>Status</th>
                        <th>Status</th>
                        <th>Ação</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.LstProdutos)
                    {
                    <tr class="odd gradeX">
                        <td>@item.codigo_produto</td>
                        <td>@item.nome_produto</td>
                        <td>@item.preco_produto</td>
                        <td>
                            @if (@item.status_produto == 1)
                            {
                            <td>
                                <label class="checkbox-inline">
                                    <input type="checkbox" checked onclick="return false"> Ativo
                                </label>
                            </td>
                        }@if (@item.status_produto == 0)
                            {
                                <td>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" onclick="return false"> Ativo
                                    </label>
                                </td>
                            }

                       
                        <td><a href="~/Produtos/Alterar?cod=@item.id_produto&codigo=@item.codigo_produto&nome=@item.nome_produto&preco=@item.preco_produto&status=@item.status_produto" class="btn btn-warning">Alterar</a></td>




                    </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>


