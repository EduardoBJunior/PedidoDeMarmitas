
@{
    ViewBag.Title = "Cardapio";
    Layout = "~/Views/Shared/_layout.cshtml";
    string _fornecedor = Request.QueryString["fornecedor"];
    string _funcionario = Request.QueryString["funcionario"];
}


<form action=" @Url.Action("CarregarFornecedores", "Pedidos")" method="POST">
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading">
                Produtos Cadastrados

            </div>
            <input name="fornecedor" class=form-control value=@_fornecedor />
            <input name="funcionario" class=form-control value=@_funcionario />
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Código</th>
                                <th>Nome do Produto</th>
                                <th>Preço</th>
                                <th>Quantidade</th>


                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.LstProdutos)
                            {

                                <tr class="odd gradeX">

                                    <td nome="codprod">@item.codigo_produto</td>
                                    <td nome="nomePord">@item.nome_produto</td>
                                    <td nome="precoProd">@item.preco_produto</td>
                                    <td><input name="qtdPedido" class=form-control value="0" /></td>

                                </tr>


                            }


                        </tbody>


                    </table>
                    <hr>

                    <button type="submit" class="btn btn-success" name="AdcionarItens">Salvar Pedido</button>
                </div>

            </div>
        </div>
</form>



</div>