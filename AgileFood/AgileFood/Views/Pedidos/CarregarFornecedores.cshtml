
@{

    Layout = "~/Views/Shared/_layout.cshtml";
    string _funcionario = Request.QueryString["funcionario"];

}

<div class="panel panel-default">
    <div class="panel-heading">
        Fornecedores Disponiveis para Pedir

    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Nome da Fornecedor</th>
                        <th>Telefone</th>
                        <th>Edereço</th>
                        <th>Pedido</th>
                        
                        <th>Alterar Pedido</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.LstFornecedores)
                    {

                    <tr class="odd gradeX">

                        <td>@item.nome_fornecedor</td>
                        <td>@item.telefone_fornecedor</td>
                        <td>@item.endereco_fornecedor</td>




                        

                        <td><a href="/Pedidos/Pedidos?fornecedor=@item.id_fornecedor&funcionario =@_funcionario" class="btn btn-warning">Pedir</a></td>
                        
                        <td><a href="/Pedidos/Alterar?cod=@item.id_fornecedor&nome=@item.nome_fornecedor&telefone=@item.telefone_fornecedor&endereco=@item.endereco_fornecedor&ativo=@item.status_fornecedor" class="btn btn-warning">Alterar</a></td>




                    </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>


