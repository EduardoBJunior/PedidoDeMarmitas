
@{
    ViewBag.Title = "Cardapio";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<form action=" @Url.Action("CadastrarCardapio", "Fornecedor")" method="POST">
    <div class="row">

        <div class="form-group">
            <input type="hidden" class="form-control" name="fornecedor" value="@ViewBag.fornecedor" />
            <label>Codigo </label>
            <input class="form-control" placeholder="Digite aqui!" name="codigo" maxlength="14">
            <label>Nome </label>
            <input class="form-control" placeholder="Digite aqui!" name="nome" maxlength="100">
            <label>Valor </label>
            <input class="form-control" placeholder="Digite aqui!" name="preco" maxlength="10">
            <hr>

            <hr>
            <button type="submit" class="btn btn-success">Cadastrar</button>

        </div>
    </div>
</form>
<form action=" @Url.Action("Cardapio", "Fornecedor")" method="POST">
<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            Produtos Cadastrados

        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Nome do Produto</th>
                            <th>Preço</th>
                            <th>Status</th>
                            <th>Status</th>
                            <th>Ação</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in ViewBag.LstProdutos)
                        {

                            <tr class="odd gradeX">

                                <td>@item.codigo_produto</td>
                                <td>@item.nome_produto</td>
                                <td>@item.preco_produto</td>
                                <td>
                                    @if (@item.status_produto == 1)
                                    {
                                    <td>
                                        <label class="checkbox-inline">
                                            <input type="checkbox" checked onclick="return false"> Ativo
                                        </label>
                                    </td>
                                }@if (@item.status_produto == 0)
                                    {
                                        <td>
                                            <label class="checkbox-inline">
                                                <input type="checkbox" onclick="return false"> Ativo
                                            </label>
                                        </td>
                                    }

                                <td><a href="~/Produtos/Alterar?cod=@item.id_produto&codigo=@item.codigo_produto&nome=@item.nome_produto&preco=@item.preco_produto&status=@item.status_produto" class="btn btn-warning">Alterar</a></td>




                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</form>



</div>