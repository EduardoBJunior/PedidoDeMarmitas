
@{

    Layout = "~/Views/Shared/_layout.cshtml";
}


<div class="panel panel-default">
    <div class="panel-heading">
        Fornecedores Cadastrados

    </div>
    <div class="panel-body">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                <thead>
                    <tr>
                        <th>Nome da Fornecedor</th>
                        <th>Ação</th>
                        <th>Edereço</th>
                        <th>Inativar</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.LstFornecedores)
                    {
                        <tr class="odd gradeX">
                            <td>@item.nome_fornecedor</td>
                            <td>@item.telefone_fornecedor</td>
                            <td>@item.endereco_fornecedor</td>
                            @if (@item.status_fornecedor == 1)
                            {
                                <td>
                                    <label class="checkbox-inline">
                                        <input type="checkbox" checked> Ativo
                                    </label>
                                </td>
                            }@if (@item.status_fornecedor == 0)
                            {
                                <td>
                                    <label class="checkbox-inline">
                                        <input type="checkbox"> Ativo
                                    </label>
                                </td>
                            }

                            <td> <button type="submit"class="btn btn-warning" name="Alterar">Alterar</button></td>
                            



                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>
